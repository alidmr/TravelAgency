@model TravelAgency.BusinessLayer.User
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Kullanıcı Güncelle</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("index","home",new { area="admin"})">Anasayfa</a>
            </li>
            <li>
                <a href="@Url.Action("index","user",new { area="admin"})">Kullanıcılar</a>
            </li>
            <li class="active">
                <strong>Kullanıcı Güncelle</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight no-padding">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table class="table table-bordered" style="background: #f9f9f9;">
                        @using (Html.BeginForm("edit", "user", new { area = "admin" }))
                        {
                            @Html.AntiForgeryToken()
                            <tbody>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Id)
                                <tr>
                                    <td>Adı</td>
                                    <td>
                                        @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Soyadı</td>
                                    <td>
                                        @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Telefon</td>
                                    <td>
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Şifre</td>
                                    <td>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Yetki</td>
                                    <td>
                                        @Html.DropDownList("Role_Id", null, htmlAttributes: new { @class = "form-control" })
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <button type="submit" class="btn btn-success">Güncelle</button>
                                    </td>
                                </tr>
                            </tbody>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


