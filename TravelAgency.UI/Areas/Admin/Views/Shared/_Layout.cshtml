@using TravelAgency.UI.Models
@using TravelAgency.BusinessLayer
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewBag.Title - Alfi Turizm</title>

    <link href="~/Content/admin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Toastr style -->
    <link href="~/Content/admin/css/plugins/toastr/toastr.min.css" rel="stylesheet" />

    <!-- Gritter -->
    <link href="~/Content/admin/js/plugins/gritter/jquery.gritter.css" rel="stylesheet" />

    <link href="~/Content/admin/css/animate.css" rel="stylesheet" />
    <link href="~/Content/admin/css/style.css" rel="stylesheet" />


    <!-- Mainly scripts -->
    <script src="~/Content/admin/js/jquery-2.1.1.js"></script>
    <script src="~/Content/admin/js/bootstrap.min.js"></script>
    <script src="~/Content/admin/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/Content/admin/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Flot -->
    <script src="~/Content/admin/js/plugins/flot/jquery.flot.js"></script>
    <script src="~/Content/admin/js/plugins/flot/jquery.flot.tooltip.min.js"></script>
    <script src="~/Content/admin/js/plugins/flot/jquery.flot.spline.js"></script>
    <script src="~/Content/admin/js/plugins/flot/jquery.flot.resize.js"></script>
    <script src="~/Content/admin/js/plugins/flot/jquery.flot.pie.js"></script>

    <!-- Peity -->
    <script src="~/Content/admin/js/plugins/peity/jquery.peity.min.js"></script>
    <script src="~/Content/admin/js/demo/peity-demo.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/Content/admin/js/inspinia.js"></script>
    <script src="~/Content/admin/js/plugins/pace/pace.min.js"></script>

    <!-- jQuery UI -->
    <script src="~/Content/admin/js/plugins/jquery-ui/jquery-ui.min.js"></script>

    <!-- GITTER -->
    <script src="~/Content/admin/js/plugins/gritter/jquery.gritter.min.js"></script>

    <!-- Sparkline -->
    <script src="~/Content/admin/js/plugins/sparkline/jquery.sparkline.min.js"></script>

    <!-- Sparkline demo data  -->
    <script src="~/Content/admin/js/demo/sparkline-demo.js"></script>

    <!-- ChartJS-->
    <script src="~/Content/admin/js/plugins/chartJs/Chart.min.js"></script>

    <!-- Toastr -->
    <script src="~/Content/admin/js/plugins/toastr/toastr.min.js"></script>
</head>

<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav metismenu" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element" style="text-align: center;">
                            <span>
                                <img alt="image" class="img-circle" src="~/Content/admin/img/user_icon.png" style="width: 100px" />
                            </span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs">
                                        @{
                            User user = CurrentSession.User;
                                        }
                                        <strong class="font-bold">@user.First_Name  @user.Last_Name</strong>
                                    </span><span class="text-muted text-xs block">@user.Email<b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li><a href="~/account/logout">Çıkış Yap</a></li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            IN+
                        </div>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("index","dashboard",new { area="admin"})"><i class="fa fa-th-large"></i> <span class="nav-label">Anasayfa</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","user",new { area="admin"})"><i class="fa fa-users"></i> <span class="nav-label">Kullanıcılar</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","role",new { area="admin"})"><i class="fa fa-user"></i> <span class="nav-label">Roller</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","content",new { area="admin"})"><i class="fa fa-diamond"></i> <span class="nav-label">İçerikler</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","category",new { area="admin"})"><i class="fa fa-list"></i> <span class="nav-label">Kategoriler</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","service",new { area="admin"})"><i class="fa fa-list"></i> <span class="nav-label">Hizmetler</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("index","slider",new { area="admin"})"><i class="fa fa-image"></i> <span class="nav-label">Slider</span></a>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
                        
                    </div>
                    <ul class="nav navbar-top-links navbar-right">
                        <li>
                            <span class="m-r-sm text-muted welcome-message">Admin Paneline Hoşgeldin @user.First_Name  @user.Last_Name</span>
                        </li>
                        <li>
                            <a href="~/account/logout">
                                <i class="fa fa-sign-out"></i> Çıkış Yap
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>


            <div style="padding: 0 0 30px 0;">
                @RenderBody()
            </div>

            <div class="footer">
                <div class="pull-right">
                    10GB of <strong>250GB</strong> Free.
                </div>
                <div>
                    <strong>Copyright</strong> Turizm Acentesi &copy; @DateTime.Now.Year
                </div>
            </div>

        </div>
    </div>



  
</body>
</html>