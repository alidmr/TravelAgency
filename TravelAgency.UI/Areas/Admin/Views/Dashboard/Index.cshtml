
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Anasayfa</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong>Anasayfa</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-3">
            <a href="#">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-4 text-center">
                            <i class="fa fa-users fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text-right">
                            <span>Kullanıcı Sayısı </span>
                            <h2 class="font-bold">@ViewBag.userCount</h2>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3">
            <a href="#">
                <div class="widget style1 red-bg">
                    <div class="row">
                        <div class="col-xs-4">
                            <i class="fa fa-calendar fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text-right">
                            <span>İçerik Sayısı </span>
                            <h2 class="font-bold">@ViewBag.contentCount</h2>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3">
            <a href="#">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-4">
                            <i class="fa fa-calendar fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text-right">
                            <span>Kategori Sayısı </span>
                            <h2 class="font-bold">@ViewBag.categoryCount</h2>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-3">
            <a href="#">
                <div class="widget style1 red-bg">
                    <div class="row">
                        <div class="col-xs-4">
                            <i class="fa fa-calendar fa-5x"></i>
                        </div>
                        <div class="col-xs-8 text-right">
                            <span>Hizmet Sayısı </span>
                            <h2 class="font-bold">@ViewBag.serviceCount</h2>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="widget style1 blue-bg">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-clock-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <span>Yılın @DateTime.Now.DayOfYear. günü </span>
                        <h2>@DateTime.Now.ToLongDateString()</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

