@model TravelAgency.BusinessLayer.Content

@{
    ViewBag.Title = "Detay";
}


<div class="detail-wrapper" style="margin-top:20px;">
    <div class="container">
        <div class="detail-header">
            <div class="row">
                <div class="col-xs-12 col-sm-8">
                    <div class="detail-category color-grey-3"></div>
                    <h2 class="detail-title color-dark-2">@Model.Title</h2>
                </div>
                <div class="col-xs-12 col-sm-4">
                    <div class="detail-price color-dark-2">fİyat <span class="color-dr-blue"> @Model.Price <i class="fa fa-try"></i></span> /kişi</div>
                </div>
            </div>
        </div>
        <div class="row padd-90">
            <div class="col-xs-12 col-md-8">
                <div class="detail-content color-1">
                    @if (Model.ContentImages.Count > 0)
                    {


                        <div class="detail-top slider-wth-thumbs style-2">
                            <div class="swiper-container thumbnails-preview" data-autoplay="0" data-loop="1" data-speed="500" data-center="0" data-slides-per-view="1">
                                <div class="swiper-wrapper">
                                    @foreach (var conImage in Model.ContentImages)
                                    {
                                        <div class="swiper-slide active" data-val="0">
                                            <img class="img-responsive img-full" style="width:750px; height:420px;" src="~/@conImage.Original_Image_Path" alt="">
                                        </div>
                                    }
                                </div>
                                <div class="pagination pagination-hidden"></div>
                            </div>
                            <div class="swiper-container thumbnails" data-autoplay="0" data-loop="0" data-speed="500" data-center="0" data-slides-per-view="responsive" data-xs-slides="3" data-sm-slides="5" data-md-slides="5" data-lg-slides="5" data-add-slides="5">
                                <div class="swiper-wrapper">
                                    @foreach (var conImage in Model.ContentImages)
                                    {
                                        <div class="swiper-slide current active" data-val="0">
                                            <img class="img-responsive img-full" src="~/@conImage.Original_Image_Path" style="width:150px; height:106px;" alt="">
                                        </div>
                                    }

                                </div>
                                <div class="pagination hidden"></div>
                            </div>
                        </div>
                    }
                    <div class="detail-content-block">

                        <p>@Html.Raw(Model.Detail)</p>
                    </div>

                </div>
            </div>
            <div class="col-xs-12 col-md-4">
                <div class="right-sidebar">
                    <div class="detail-block bg-dr-blue">
                        <h4 class="color-white">Detaylar</h4>
                        <div class="details-desc">
                            <p class="color-grey-9">Kategorİ: <span class="color-white">@Model.Category.Name</span></p>
                            <p class="color-grey-9">FİYATI: <span class="color-white">@Model.Price <i class="fa fa-try"></i> / KİŞİ</span></p>
                            <p class="color-grey-9">Konumu: <span class="color-white">@Model.Location</span></p>
                            <p class="color-grey-9">Tarih: <span class="color-white">@string.Format("{0: dd MMMM yyyy}", Model.StartDate) -  @string.Format("{0: dd MMMM yyyy}", Model.FinishDate)</span></p>
                            <p class="color-grey-9">
                                Derece:
                                @for (int i = 0; i < Model.Rate; i++)
                                {
                                    <span class="fa fa-star color-yellow"></span>
                                }

                            </p>
                            <p class="color-grey-9">KİŞİ SAYISI: <span class="color-white">@Model.NumberPeople</span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</div>