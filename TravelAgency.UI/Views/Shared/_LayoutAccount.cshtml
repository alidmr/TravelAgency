    <div style="position: fixed; bottom: 0; width: 100%; height: 50px; padding: 5px 0 0 0; text-align: center; background-color: #3498db; color:#ffffff">
        <h3 class="no-margins">TRAVEL AGENCY</h3>
        <span>Yönetim Paneli</span>
    </div>
    <!-- Mainly scripts -->
    <script src="~/Content/admin/js/jquery-2.1.1.js"></script>
    <script src="~/Content/admin/js/bootstrap.min.js"></script>
