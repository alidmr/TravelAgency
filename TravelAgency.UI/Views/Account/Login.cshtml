@model TravelAgency.Entities.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div class="middle-box text-center loginscreen animated fadeInDown" style="background:url(../Content/admin/img/transparent_back.png); margin: 30% auto 0 -15%; padding: 30px; width: 400px;">
        <div>
            <h1 style="color:#ffffff;font-size:30px;"><i class="fa fa-key"></i> Kullanıcı Girişi</h1>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissable" style="display: @ViewBag.ErrorMessage==true? block : none">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    @Html.ValidationSummary(false, "")
                </div>
            }

            @using (Html.BeginForm("login", "account"))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "email", placeholder = "E-mail adresiniz" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifreniz" })
                </div>
                <button class="btn btn-success block full-width m-b"><i class="fa fa-key"></i> Sisteme Bağlan</button>
            }

        </div>
    </div>
</div>